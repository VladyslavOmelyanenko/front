---
import Nav from "../components/Nav.astro";
import "../styles/reset.scss";
import "../styles/global.scss";
import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;

const path = Astro.url.pathname;
const clean = path === "/" ? "/" : path.replace(/\/+$/, ""); // remove trailing slash
const segments = clean.split("/").filter(Boolean); // ["works"] or ["works","work1"]
const isDetail =
  (segments[0] === "works" || segments[0] === "blog") && segments.length > 1;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <!-- disable default fade site-wide -->
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />

    <link
      rel="preload"
      href="/fonts/neue.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <ViewTransitions />

    <!-- Site navigation (persisted across transitions) -->

    {isDetail ? null : <Nav transition:persist />}

    <!-- Only the main content transitions -->
    <main class="main-container">
      <slot />
    </main>

    <!-- Persist any other fixed UI too -->
    <div class="copyright"><a href="/">Â© 2025, Dzastins Zavadzkis</a></div>

    <!-- Scripts -->
    <script src="/scripts/nav.js" is:inline></script>
    <script src="/scripts/work-previews.js" is:inline></script>
    <script src="/scripts/blog-previews.js" is:inline></script>
  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .main-container {
    width: var(--column-width);
    margin-left: calc((100% - var(--column-width)) / 2);
    padding-bottom: 50px;
    padding-top: 132px;
  }

  .copyright {
    position: fixed;
    bottom: 10px;
    right: 20px;
    z-index: 9999;
    font-size: 12px;
  }

  @media (max-width: 768px) {
    .main-container {
      width: 90%;
      margin-left: 5%;
      padding-top: 110px;
    }

    .copyright {
      font-size: calc(var(--fz) * 0.75);
    }
  }
</style>
