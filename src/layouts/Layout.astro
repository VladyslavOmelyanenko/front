---
import Nav from "../components/Nav.astro";
import "../styles/reset.scss";
import "../styles/global.scss";
import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;

const path = Astro.url.pathname;
const clean = path === "/" ? "/" : path.replace(/\/+$/, ""); // remove trailing slash
const segments = clean.split("/").filter(Boolean); // ["works"] or ["works","work1"]
const isDetail =
  (segments[0] === "works" || segments[0] === "blog") && segments.length > 1;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />

    <link
      rel="preload"
      href="/fonts/neue.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Material Symbols (thin-ish) -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,300,0,0"
    />
  </head>

  <body>
    <ViewTransitions />

    {isDetail ? null : <Nav transition:persist />}

    <main class="main-container">
      <slot />
    </main>

    <div class="copyright"><a href="/">© 2025, Dzastins Zavadzkis</a></div>

    <!-- Scripts -->
    <script src="/scripts/nav.js" is:inline></script>
    <script src="/scripts/work-previews.js" is:inline></script>
    <script src="/scripts/blog-previews.js" is:inline></script>

    <!-- ✅ CSS-only-ish fade: re-trigger on Astro swaps -->
    <script is:inline>
      (function () {
        let last = 0;

        function retriggerMainFade() {
          const el = document.querySelector(".main-container");
          if (!el) return;

          // prevent duplicate calls within the same frame/time slice
          const now = performance.now();
          if (now - last < 50) return;
          last = now;

          el.style.animation = "none";
          void el.offsetHeight; // force reflow
          el.style.animation = "";
        }

        // initial load (once)
        retriggerMainFade();

        // subsequent client-side navigations
        document.addEventListener("astro:after-swap", retriggerMainFade);
      })();
    </script>
  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .main-container {
    width: var(--column-width);
    margin-left: calc((100% - var(--column-width)) / 2);
    min-height: 100vh;
    /* ✅ subtle fade-in */
    opacity: 0;
    animation: mainFadeIn 140ms ease-out forwards;
    will-change: opacity;
  }

  @keyframes mainFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .main-container {
      animation: none;
      opacity: 1;
    }
  }

  .copyright {
    position: fixed;
    bottom: 10px;
    right: 20px;
    z-index: 9999;
    font-size: 12px;
  }

  @media (max-width: 768px) {
    .main-container {
      width: 90%;
      margin-left: 5%;
      padding-top: 110px;
    }

    .copyright {
      font-size: calc(var(--fz) * 0.75);
      right: 4px;
      bottom: 4px;
      transform-origin: bottom right;
      transform: rotate(-90deg) translateX(100%);
    }
  }

  /* ================================
   Works page: true viewport centering
   with minimum top/bottom spacing
   (only when .works-page exists)
================================= */

  .main-container:has(.works-page) {
    min-height: 100vh;
    padding-top: 0;
    padding-bottom: 0;

    display: flex;
    flex-direction: column;
  }

  /* Flexible spacers above/below content */
  .main-container:has(.works-page)::before,
  .main-container:has(.works-page)::after {
    content: "";
    flex: 1 1 0;
  }

  /* Minimum top/bottom "padding" */
  .main-container:has(.works-page)::before {
    min-height: var(--pt); /* matches your desktop main-container padding-top */
  }

  .main-container:has(.works-page)::after {
    min-height: 50px; /* matches your desktop padding-bottom area */
  }

  /* Prevent inner wrapper from fighting layout */
  .main-container:has(.works-page) .works-page {
    min-height: auto;
    padding: 0;
  }

  /* Mobile values to match your Layout */
  @media (max-width: 768px) {
    .main-container:has(.works-page)::before {
      min-height: 110px;
    }
    .main-container:has(.works-page)::after {
      min-height: 40px;
    }
  }
</style>
