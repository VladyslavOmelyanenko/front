---
import { ClientRouter } from "astro:transitions";
import Nav from "../components/Nav.astro";
import "../styles/reset.css";
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <!-- disable default fade site-wide -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>

  <body>
    <!-- Persist the nav across route swaps so it never re-animates or rerenders -->
    <Nav transition:persist transition:name="nav" />

    <!-- Only the main content slides -->
    <main class="main-container" transition:animate="slide">
      <slot />
    </main>

    <!-- Persist any other fixed UI too -->
    <div class="copyright" transition:persist>Â© 2025, Dzastins Zavadzkis</div>
  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  .main-container {
    width: 36%;
    margin-left: 32%;
    padding-bottom: 50px;
  }
  .copyright {
    position: fixed;
    bottom: 50px;
    right: 50px;
  }
</style>
