---
import Nav from "../components/Nav.astro";
import "../styles/reset.scss";
import "../styles/global.scss";
import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;

const path = Astro.url.pathname;
const clean = path === "/" ? "/" : path.replace(/\/+$/, ""); // remove trailing slash
const segments = clean.split("/").filter(Boolean); // ["works"] or ["works","work1"]
const isDetail =
  (segments[0] === "works" || segments[0] === "blog") && segments.length > 1;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <!-- ✅ MUST be first in <head> -->
    <meta charset="UTF-8" />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />

    <link
      rel="preload"
      href="/fonts/neue.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Material Symbols (thin-ish) -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,300,0,0"
    />
  </head>

  <body>
    <ViewTransitions />

    {isDetail ? null : <Nav transition:persist />}

    <main class="main-container">
      <slot />
    </main>

    <slot name="overlay" />

    <div class="footer">
      {
        segments[0] === "works" && segments.length === 1 ? (
          <a class="works-unlock-link" href="/works?unlock=open">
            Unlock Hidden Works
          </a>
        ) : null
      }
      <div class="copyright"><a href="/">© 2025, Dzastins Zavadskis</a></div>
    </div>

    <!-- Scripts -->
    <script src="/scripts/nav.js" is:inline></script>
    <script src="/scripts/work-previews.js" is:inline></script>
    <script src="/scripts/blog-previews.js" is:inline></script>

    <script src="/scripts/works-unlock.js" is:inline></script>
    <!-- ✅ CSS-only-ish fade: re-trigger on Astro swaps -->

  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }


  @keyframes mainFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .main-container {
      animation: none;
      opacity: 1;
    }
  }

  .footer {
    position: fixed;
    bottom: 10px;
    right: 20px;
    z-index: 9999;
    font-size: 12px;
    line-height: 18px;
    display: flex;
    flex-direction: column;
  }

 

  @media (max-width: 768px) {


    .footer {
      font-size: calc(var(--fz) * 0.75);
      right: 4px;
      bottom: 4px;
      transform-origin: bottom right;
      transform: rotate(-90deg) translateX(100%);
      flex-direction: row-reverse;
      gap:12px;
    }
  }

  
</style>