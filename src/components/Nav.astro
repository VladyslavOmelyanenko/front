---
const currentPath = Astro.url.pathname;
const routes = ["/works", "/about", "/blog", "/archive"];
const activeIndex = Math.max(0, routes.indexOf(currentPath)); // fallback to first
---

<ul class="nav-bar" id="navBar" style={`--active-index:${activeIndex}`}>
  <li class={currentPath === "/works" ? "active" : ""}>
    <a href="/works">Works</a>
  </li>
  <li class={currentPath === "/about" ? "active" : ""}>
    <a href="/about">About</a>
  </li>
  <li class={currentPath === "/blog" ? "active" : ""}>
    <a href="/blog">Blog</a>
  </li>
  <li class={currentPath === "/archive" ? "active" : ""}>
    <a href="/archive">Archive</a>
  </li>

  <!-- single moving black highlight -->
  <div class="animation"></div>
</ul>

<style>
  /* === base layout === */
  .nav-bar {
    display: flex;
    list-style: none;
    width: 30%;
    min-width: 400px;
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    justify-content: space-around;
    top: 30px;
    position: fixed;
    left: 0;
    right: 0;
    margin: auto;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
    z-index: 1000;
    overflow: hidden;
  }

  .nav-bar.hidden {
    transform: translateY(-300%);
    opacity: 0;
  }

  .nav-bar li {
    flex: 1 1 25%;
    text-align: center;
    position: relative;
    z-index: 1;
    border-radius: 5px;
  }

  .nav-bar a {
    display: block;
    width: 100%;
    height: 100%;
    padding: 0.3em 0;
    color: rgb(255, 255, 255);
    text-decoration: none;
    border-radius: 5px;
  }

  /* === sliding highlight (GPU-accelerated) === */
  .nav-bar .animation {
    position: absolute;
    top: 0;
    left: 0; /* âœ… anchor the starting point */
    width: 25%;
    height: 100%;
    background: #000;
    border-radius: 5px;
    z-index: 0;
    pointer-events: none;

    transform: translate3d(calc(var(--active-index, 0) * 100%), 0, 0);
    transition: transform 0.25s ease;
    will-change: transform;
    backface-visibility: hidden;
  }

  .nav-bar li:nth-child(1):hover ~ .animation {
    transform: translate3d(0%, 0, 0);
  }
  .nav-bar li:nth-child(2):hover ~ .animation {
    transform: translate3d(100%, 0, 0);
  }
  .nav-bar li:nth-child(3):hover ~ .animation {
    transform: translate3d(200%, 0, 0);
  }
  .nav-bar li:nth-child(4):hover ~ .animation {
    transform: translate3d(300%, 0, 0);
  }

  @media (prefers-reduced-motion: reduce) {
    .nav-bar .animation {
      transition: none;
    }
  }
</style>

<script>
  let lastScrollY = window.scrollY;
  const nav = document.getElementById("navBar");

  window.addEventListener("scroll", () => {
    const currentScrollY = window.scrollY;

    if (currentScrollY > lastScrollY && currentScrollY > 60) {
      nav.classList.add("hidden");
    } else {
      nav.classList.remove("hidden");
    }

    lastScrollY = currentScrollY;
  });

  // optional: remove if not needed
  nav.querySelectorAll("a").forEach((a) => {
    a.addEventListener("mousedown", () => {
      document.body.style.cursor = "none";
    });
  });
</script>
