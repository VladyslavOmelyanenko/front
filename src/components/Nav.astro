---
const routes = ["/works", "/about", "/blog"];
---

<ul class="nav-bar" id="navBar" data-routes={JSON.stringify(routes)}>
  <div class="animation"></div>
  <li><a href="/works">Works</a></li>
  <li><a href="/about">About</a></li>
  <li><a href="/blog">Blog</a></li>
</ul>

<style lang="scss">
  @import "../styles/_variables.scss";

  .nav-bar {
    position: fixed;
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    list-style: none;
    background-color: $gray;
    border: 3px solid $gray;
    border-radius: $br;
    width: max-content;
    padding: 0;
    cursor: none;
    z-index: 1000;
    overflow: hidden;
    transition:
      top 0.25s ease,
      opacity 0.25s ease;
  }

  .nav-bar--hidden {
    top: -80px;
    opacity: 0;
  }

  .nav-bar li {
    position: relative;
    z-index: 1;
    cursor: none;
  }

  .nav-bar li a {
    position: relative;
    cursor: none;
    z-index: 3; /* higher than animation */
  }

  /* base link styles */
  .nav-bar a {
    padding: 0 14px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    text-decoration: none;
    white-space: nowrap;
    position: relative;
    z-index: 2;
    transition: color 0.15s ease; /* desktop-only, overridden on touch */
  }

  /* active link only when NOT hovering nav */
  .nav-bar:not(:hover) a.active {
    color: #fff;
  }

  /* when hovering nav: reset all to black */
  .nav-bar:hover a {
    color: #000;
  }

  /* hovered link is white */
  .nav-bar a:hover {
    color: #fff;
  }

  .animation {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background: #000;
    border-radius: $br;
    z-index: 1;
    pointer-events: none;
    width: 0;
    transform: translateX(0);
    transition:
      transform 0.25s ease,
      width 0.25s ease;
  }

  /* On touch devices:
     - no color transition (instant change)
     - active link always white, others black
     - ignore hover-based colors to avoid ghost hover weirdness
  */
  @media (hover: none) {
    .nav-bar a {
      transition: none;
      color: #000;
    }

    .nav-bar a.active {
      color: #fff;
    }

    .nav-bar:hover a,
    .nav-bar a:hover {
      color: inherit;
    }
  }
</style>
