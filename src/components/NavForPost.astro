---
const { title } = Astro.props;
const pathname = Astro.url.pathname;

// determines base route like "/blog" or "/works"
const parent = "/" + pathname.split("/")[1];
---

<ul class="nav-post-wrapper">
  <li>
    <div class="nav-pill">
      <span class="nav-post-title" data-full-title={title} title={title}>
        {title}
      </span>
    </div>
  </li>

  <li class="close-button-container">
    <div class="highlight"></div>
    <a class="close-button" href={parent} aria-label="Close post">&#10007;</a>
  </li>
</ul>

<script type="module">
  // left/right safe gap = 5% of viewport width EACH side
  const SIDE_GAP_VW = 5;

  const titleEl = document.querySelector(".nav-post-title");
  const pillEl = document.querySelector(".nav-pill");
  const closeEl = document.querySelector(".close-button-container");
  const wrapperEl = document.querySelector(".nav-post-wrapper");

  if (titleEl && pillEl && closeEl && wrapperEl) {
    const fullTitle = titleEl.dataset.fullTitle ?? titleEl.textContent ?? "";
    const ellipsis = "…";

    function truncateByWordsToFit() {
      // reset to full title on every run (important for resize)
      titleEl.textContent = fullTitle;

      // available width = 100vw - (left+right gaps) - close button - flex gap
      const gap = parseFloat(getComputedStyle(wrapperEl).gap || "0") || 0;
      const closeWidth = closeEl.getBoundingClientRect().width;

      const sideGapPx = (window.innerWidth * SIDE_GAP_VW) / 100;
      const available = window.innerWidth - sideGapPx * 2 - closeWidth - gap;

      // cap the pill width
      pillEl.style.maxWidth = `${Math.max(0, available)}px`;

      // if it fits, we're done
      if (titleEl.scrollWidth <= titleEl.clientWidth) return;

      const words = fullTitle.trim().split(/\s+/).filter(Boolean);
      if (!words.length) return;

      // binary search for the largest whole-word prefix that fits
      let lo = 0;
      let hi = words.length;

      while (lo < hi) {
        const mid = Math.ceil((lo + hi) / 2);
        titleEl.textContent = words.slice(0, mid).join(" ") + ellipsis;

        if (titleEl.scrollWidth <= titleEl.clientWidth) lo = mid;
        else hi = mid - 1;
      }

      const finalCount = Math.max(1, lo);
      titleEl.textContent = words.slice(0, finalCount).join(" ") + ellipsis;
    }

    truncateByWordsToFit();
    window.addEventListener("resize", truncateByWordsToFit, { passive: true });

    // helps when webfonts load after first paint
    if (document.fonts?.ready) document.fonts.ready.then(truncateByWordsToFit);
  }
</script>

<style lang="scss">
  /* POST NAV — robust backdrop blur (Chrome/Safari/Firefox) */

  .nav-post-wrapper {
    position: fixed;
    top: 30px;
    left: 0;
    right: 0;
    z-index: 1000;
    min-width: 1px;
    min-height: 1px;

    display: flex;
    justify-content: center;
    gap: 8px;

    list-style: none;
    margin: 0;
    padding: 0 5vw;
    transform: translateZ(0); /* promote fixed bar */
    will-change: transform;

    transition:
      top 0.25s ease,
      opacity 0.25s ease;
  }

  .nav-post-wrapper.nav-bar--hidden {
    top: -80px;
    opacity: 0;
  }

  /* each pill cell */
  .nav-post-wrapper > li {
    position: relative;
    border-radius: var(--br);
    overflow: hidden; /* clip the blur layer */
    min-width: 0;
    box-shadow: var(--box-shadow);
    
  }

  /* the blur layer (separate from content/shadows) */
  .nav-post-wrapper > li::before {
    content: "";
    position: absolute;
    inset: 0;

    /* IMPORTANT: translucent fill so you can see the blur */
    background: rgba(255, 255, 255, 0.22);

    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);

    pointer-events: none;
    z-index: 0;
  }

  /* LEFT: title pill container */
  .nav-pill {
    position: relative;
    z-index: 1;
    border-radius: var(--br);
    min-width: 0;
    max-width: 100%; /* JS can still set maxWidth on this */
  }

  /* Title content */
  .nav-post-title {
    position: relative;
    z-index: 1;

    height: 36px;
    padding: 0 14px 3px;

    display: flex;
    align-items: center;
    justify-content: center;

    white-space: nowrap;
    overflow: hidden;
    min-width: 0;
    max-width: 100%;

    color: #000;
    border-radius: var(--br);

    background: rgba(255, 255, 255, 0.8);

    /* shadow on content, not on the blur layer */
  }

  /* RIGHT: close button cell */
  .close-button-container {
    width: 36px;
    height: 36px;
    flex: 0 0 36px;

    position: relative;
    z-index: 1;
    border-radius: var(--br);
  }

  /* highlight stays clipped by li overflow */
  .highlight {
    position: absolute;
    inset: 0;
    background: transparent;
    border-radius: var(--br);
    z-index: 0;
    transition: background-color 0.25s ease;
  }

  .close-button {
    position: relative;
    z-index: 2;

    width: 100%;
    height: 100%;

    display: flex;
    align-items: center;
    justify-content: center;

    border-radius: var(--br);
    text-decoration: none;
    color: #000;

    background: rgba(255, 255, 255, 0.8);
    box-shadow: var(--box-shadow);
  }

  /* hover: slightly stronger blur + pressed shadow */
  .nav-post-wrapper > li:hover::before {
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
  }

  .nav-post-wrapper > li:hover .nav-post-title,
  .nav-post-wrapper > li:hover .close-button {
    box-shadow: 0 0 3px rgba(122, 122, 122, 0.4) inset;
  }
</style>
