---
const { title } = Astro.props;
const pathname = Astro.url.pathname;

// determines base route like "/blog" or "/works"
const parent = "/" + pathname.split("/")[1];
---

<ul class="nav-post-wrapper">
  <li>
    <div class="nav-pill">
      <span class="nav-post-title">{title}</span>
    </div>
  </li>

  <li class="close-button-container">
    <div class="highlight"></div>
    <a class="close-button" href={parent} aria-label="Close post">&#10007;</a>
  </li>
</ul>

<style lang="scss">
  /* Outer wrapper for post nav */
  .nav-post-wrapper {
    position: fixed;
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 8px;
    width: max-content;
    z-index: 1000;
    transition:
      top 0.25s ease,
      opacity 0.25s ease;
  }

  /* This pill should match .nav-bar visually (height, border, bg) */
  .nav-pill {
    // background-color: var(--gray);
    // border: 3px solid var(--gray);
    border-radius: var(--br);
    padding: 0;
    display: inline-flex;
    align-items: stretch;
    overflow: hidden;
    box-shadow: 0 0 3px rgba(122, 122, 122, 0.9);

    position: relative;
  }

  .nav-post-title {
    padding: 0 14px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    white-space: nowrap;
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
  }

  /* Close button wrapper */
  .close-button-container {
    width: 36px;
    height: 36px;
    position: relative;
    overflow: hidden; /* clip rounded highlight */
    border-radius: var(--br);
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    box-shadow: 0 0 3px rgba(122, 122, 122, 0.9);
    cursor: pointer;
    transition: box-shadow 0.15s ease, backdrop-filter 0.15s ease;
  }

  /* Hover highlight for close button */
  .highlight {
    position: absolute;
    inset: 0;
    background-color: transparent;
    border-radius: var(--br);
    z-index: 0; /* under the X */
    transition: background-color 0.25s ease;
  }

  /* The X (always stays visible) */
  .close-button {
    position: relative;
    z-index: 2;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    text-decoration: none;
  }

  /* Hover effect */
  .close-button-container:hover {
    box-shadow: none;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* Hide on scroll â€“ uses same class as main nav JS */
  .nav-post-wrapper.nav-bar--hidden {
    top: -80px;
    opacity: 0;
  }
</style>
