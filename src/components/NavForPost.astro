---
const { title } = Astro.props;
const pathname = Astro.url.pathname;

// determines base route like "/blog" or "/works"
const parent = "/" + pathname.split("/")[1];
---

<ul class="nav-post-wrapper">
  <li>
    <div class="nav-pill">
      <span class="nav-post-title" data-full-title={title} title={title}>
        {title}
      </span>
    </div>
  </li>

  <li class="close-button-container">
    <div class="highlight"></div>
    <a class="close-button" href={parent} aria-label="Close post">&#10007;</a>
  </li>
</ul>

<script type="module">
  // left/right safe gap = 5% of viewport width EACH side
  const SIDE_GAP_VW = 5;

  const titleEl = document.querySelector(".nav-post-title");
  const pillEl = document.querySelector(".nav-pill");
  const closeEl = document.querySelector(".close-button-container");
  const wrapperEl = document.querySelector(".nav-post-wrapper");

  if (titleEl && pillEl && closeEl && wrapperEl) {
    const fullTitle = titleEl.dataset.fullTitle ?? titleEl.textContent ?? "";
    const ellipsis = "…";

    function truncateByWordsToFit() {
      // reset to full title on every run (important for resize)
      titleEl.textContent = fullTitle;

      // available width = 100vw - (left+right gaps) - close button - flex gap
      const gap = parseFloat(getComputedStyle(wrapperEl).gap || "0") || 0;
      const closeWidth = closeEl.getBoundingClientRect().width;

      const sideGapPx = (window.innerWidth * SIDE_GAP_VW) / 100;
      const available = window.innerWidth - sideGapPx * 2 - closeWidth - gap;

      // cap the pill width
      pillEl.style.maxWidth = `${Math.max(0, available)}px`;

      // if it fits, we're done
      if (titleEl.scrollWidth <= titleEl.clientWidth) return;

      const words = fullTitle.trim().split(/\s+/).filter(Boolean);
      if (!words.length) return;

      // binary search for the largest whole-word prefix that fits
      let lo = 0;
      let hi = words.length;

      while (lo < hi) {
        const mid = Math.ceil((lo + hi) / 2);
        titleEl.textContent = words.slice(0, mid).join(" ") + ellipsis;

        if (titleEl.scrollWidth <= titleEl.clientWidth) lo = mid;
        else hi = mid - 1;
      }

      const finalCount = Math.max(1, lo);
      titleEl.textContent = words.slice(0, finalCount).join(" ") + ellipsis;
    }

    truncateByWordsToFit();
    window.addEventListener("resize", truncateByWordsToFit, { passive: true });

    // helps when webfonts load after first paint
    if (document.fonts?.ready) document.fonts.ready.then(truncateByWordsToFit);
  }
</script>

<style lang="scss">
  /* Outer wrapper for post nav */
  .nav-post-wrapper {
    position: fixed;
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 8px;
    width: max-content;
    z-index: 1000;
    transition:
      top 0.25s ease,
      opacity 0.25s ease;

    /* keep the whole thing inside 5vw on each side */
    max-width: 90vw;
  }

  /* This pill should match .nav-bar visually (height, border, bg) */
  .nav-pill {
    border-radius: var(--br);
    padding: 0;
    display: inline-flex;
    align-items: stretch;
    overflow: hidden;
    box-shadow: 0 0 3px rgba(122, 122, 122, 0.9);
    position: relative;

    /* allow shrinking inside flex + obey max-width set by JS */
    min-width: 0;
  }

  .nav-post-title {
    padding: 0 14px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    white-space: nowrap;
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);

    /* needed for truncation + shrink-to-fit */
    min-width: 0;
    max-width: 100%;
    overflow: hidden;
  }

  /* Close button wrapper */
  .close-button-container {
    width: 36px;
    height: 36px;
    position: relative;
    overflow: hidden; /* clip rounded highlight */
    border-radius: var(--br);
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    box-shadow: 0 0 3px rgba(122, 122, 122, 0.9);
    cursor: pointer;
    transition:
      box-shadow 0.15s ease,
      backdrop-filter 0.15s ease;
    flex: 0 0 36px;
  }

  /* Hover highlight for close button */
  .highlight {
    position: absolute;
    inset: 0;
    background-color: transparent;
    border-radius: var(--br);
    z-index: 0; /* under the X */
    transition: background-color 0.25s ease;
  }

  /* The X (always stays visible) */
  .close-button {
    position: relative;
    z-index: 2;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    text-decoration: none;
  }

  /* Hover effect */
  .close-button-container:hover {
    box-shadow: none;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* Hide on scroll – uses same class as main nav JS */
  .nav-post-wrapper.nav-bar--hidden {
    top: -80px;
    opacity: 0;
  }
</style>
