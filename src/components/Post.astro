---
import PostContent from "../components/PostContent.jsx";

const { post } = Astro.props;

const postDate = new Date(post.postDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div>
  <div class="title-bar">
    <h2>{post.title}</h2>
    <p>{postDate}</p>
  </div>
  <div class="post-content">
    <PostContent post={post} client:load />
  </div>
</div>

<style lang="scss">
  @import "../styles/_variables.scss";

  .post-content {
    width: 100%;
    position: relative;
  }

  .title-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  :global(.post-content img) {
    width: 100%;
    margin: 8px 0;
    border-radius: 4px;
  }

  :global(.post-content p) {
    white-space: pre-wrap;
    min-height: 16px;
  }

  :global(.post-content strong) {
    font-weight: normal;
    font-size: 32px;
  }

  :global(.post-content blockquote) {
    font-weight: normal;
    width: 100%;
    text-align: center;
    border-radius: $br;
    background-color: $gray;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: $lh * 10;
    margin-top: $lh / 2;
    margin-bottom: $lh / 2;
    padding: 8px 8px;
  }

  /* === FOOTNOTE / MARGIN NOTE STYLES === */

  /* paragraphs that may contain footnotes */
  :global(.post-content .pt-block) {
    position: relative;
  }

  /* inline highlighted text */
  :global(.post-content .footnote-text) {
    color: #888;
  }

  /* inline wrapper behaves normally */
  :global(.post-content .footnote) {
    position: static;
  }

  /* inline note is hidden; JS uses its textContent */
  :global(.post-content .footnote-note) {
    display: none;
  }

  /* overlay container for margin notes */
  :global(.post-content .footnote-layer) {
    position: absolute;
    top: 0;
    left: 100%; /* start at right edge of text column */
    margin-left: 16px; /* little gap from text */
    width: 20vw; /* margin width */
    pointer-events: none;
  }

  /* each margin note, positioned by JS */
  :global(.post-content .margin-note) {
    position: absolute;
    left: 0;
    white-space: nowrap;
    color: #aaa;
    transform: translateY(0.15em);
  }
</style>
