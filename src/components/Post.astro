---
import PostContent from "../components/PostContent.jsx";

const { post } = Astro.props;

const postDate = new Date(post.postDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div>
  <div class="title-bar">
    <h2>{post.title}</h2>
    <p>{postDate}</p>
  </div>

  <div class="post-content">
    <div class="post-body">
      <PostContent post={post} client:load />
    </div>
  </div>
</div>

<style lang="scss">
  /* Remove this import once you define these globally:
     :root { --br: 3px; --gray: #e9e9e9; --fz: 22px; --lh: 25px; }
  */
  /* @import "../styles/_variables.scss"; */

  .post-content {
    width: 100%;
    position: relative;
  }

  .title-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  :global(.post-content img) {
    width: 100%;
    margin: 8px 0;
    border-radius: 4px;
  }

  :global(.post-content p) {
    white-space: pre-wrap;
    min-height: 16px;
  }

  :global(.post-content strong) {
    font-weight: normal;
    font-size: 32px;
  }

  :global(.post-content blockquote) {
    font-weight: normal;
    width: 100%;
    font-size: calc(var(--fz) * 2);
    line-height: calc(var(--lh) * 2);
    text-align: center;
    border-radius: var(--br);
    background-color: var(--gray);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(var(--lh) * 10);
    margin-top: calc(var(--lh) / 2);
    margin-bottom: calc(var(--lh) / 2);
    padding: 40px;
  }

  /* === SHARED FOOTNOTE STYLES === */

  :global(.post-content .pt-block) {
    position: relative;
  }

  :global(.post-content .footnote-text) {
    color: var(--footnote-gray);
    cursor: pointer;
  }

  /* the hidden source for note HTML */
  :global(.post-content .footnote-note) {
    display: none;
  }

  /* inline PT in note */
  :global(.post-content .fn-inline-block) {
    padding: 0 2px;
  }

  /* === DESKTOP MARGIN NOTE COLUMNS === */
  :global(.post-content .footnote-layer--right),
  :global(.post-content .footnote-layer--left) {
    position: absolute;
    top: 0;
    width: calc((100vw - var(--column-width)) / 2 - 26px);
    pointer-events: none;
    z-index: 10; /* keeps notes above most content */
  }

  :global(.post-content .footnote-layer--right) {
    left: 100%;
    margin-left: 13px;
    text-align: left;
  }

  :global(.post-content .footnote-layer--left) {
    right: 100%;
    margin-right: 13px;
    text-align: right;
  }

  :global(.post-content .margin-note) {
    position: absolute;
    color: var(--footnote-gray);
    transform: translateY(0.15em);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease-out;
  }

  :global(.post-content .margin-note--right) {
    left: 0;
    text-align: left;
  }

  /* FIX: left notes should be right-aligned */
  :global(.post-content .margin-note--left) {
    right: 0;
    text-align: left;
  }

  :global(.post-content .margin-note--visible) {
    opacity: 1;
  }

  /* === MOBILE: INLINE FOOTNOTES AFTER TEXT === */
  @media (max-width: 768px) {
    /* don't ever show side layers / margin notes on phone */
    :global(.post-content .footnote-layer--right),
    :global(.post-content .footnote-layer--left),
    :global(.post-content .margin-note) {
      display: none !important;
    }

    :global(.post-content .inline-footnote) {
      display: block;
      margin-top: calc(var(--lh) / 2);
      margin-bottom: calc(var(--lh) / 2);
      padding: 8px;
      color: var(--footnote-gray);
      border-radius: var(--br);
      margin-left: 5%;
    }
  }
</style>
