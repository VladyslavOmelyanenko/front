---
import PostContent from "../components/PostContent.jsx";

const { post } = Astro.props;

const dateText = (() => {
  if (post.postType === "about") return null;

  const d = new Date(post.postDate);

  if (post.postType === "work") {
    return String(d.getFullYear());
  }

  return d.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
})();
---

<div>
  {
    post.postType != "about" && (
      <div class="title-bar">
        <h2>{post.title}</h2>
        {dateText && <p>{dateText}</p>}
      </div>
    )
  }

  <div class="post-content">
    <div class="post-body">
      <PostContent post={post} client:load />
    </div>
  </div>
</div>

<style lang="scss">
  /* Remove this import once you define these globally:
     :root { --br: 3px; --gray: #e9e9e9; --fz: 22px; --lh: 25px; --footnote-gray: rgb(150,150,150); --column-width: 780px; }
  */
  /* @import "../styles/_variables.scss"; */

  .post-content {
    width: 100%;
    position: relative;
  }

  .title-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  :global(.post-content img) {
    width: 100%;
    border-radius: 4px;
  }

  /* override for PT images so wrapper controls spacing */
  :global(.post-content .pt-image img) {
    margin: 0 !important;
    border-radius: var(--br);
    cursor: zoom-in;
  }

  :global(.post-content p) {
    white-space: pre-wrap;
    min-height: 16px;
  }

  :global(.post-content strong) {
    font-weight: normal;
    font-size: 32px;
  }

  :global(.post-content blockquote) {
    font-weight: normal;
    width: 100%;
    font-size: calc(var(--fz) * 2);
    line-height: calc(var(--lh) * 2);
    text-align: center;
    border-radius: var(--br);
    background-color: var(--gray);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(var(--lh) * 10);
    margin-top: calc(var(--lh) / 2);
    margin-bottom: calc(var(--lh) / 2);
    padding: 40px;
  }

  /* === SHARED FOOTNOTE STYLES === */

  :global(.post-content .pt-block) {
    margin: 0 0 calc(var(--lh) / 2);
    white-space: pre-wrap;
  }

  :global(.post-content .footnote-text) {
    color: var(--footnote-gray);
    cursor: pointer;
  }

  /* the hidden source for note HTML */
  :global(.post-content .footnote-note) {
    display: none;
  }

  /* inline PT in note */
  :global(.post-content .fn-inline-block) {
    padding: 0 2px;
  }

  /* === DESKTOP MARGIN NOTE COLUMNS === */
  :global(.post-content .footnote-layer--right),
  :global(.post-content .footnote-layer--left) {
    position: absolute;
    top: 0;
    width: calc((100vw - var(--column-width)) / 2 - 26px);
    pointer-events: none;
    z-index: 10; /* keeps notes above most content */
  }

  :global(.post-content .footnote-layer--right) {
    left: 100%;
    margin-left: 13px;
    text-align: left;
  }

  :global(.post-content .footnote-layer--left) {
    right: 100%;
    margin-right: 13px;
    text-align: right;
  }

  :global(.post-content .margin-note) {
    position: absolute;
    color: var(--footnote-gray);
    display: none; /* ✅ no scroll-space when closed */
    pointer-events: none;
    max-width: 350px;
  }

  :global(.post-content .margin-note--right) {
    left: 0;
    text-align: left;
  }

  :global(.post-content .margin-note--left) {
    right: 0;
    text-align: left;
  }

  :global(.post-content .margin-note--visible) {
    display: block; /* ✅ only takes space when open */
    opacity: 1; /* optional */
  }

  :global(.post-content .pt-carousel) {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;

    /* container rounding */
    border-radius: var(--br);
    overflow: hidden;
  }

  :global(.post-content .pt-carousel-img) {
    position: absolute;
    inset: 0;
    opacity: 0;

    /* IMPORTANT: cancel your global img margins */
    margin: 0 !important;

    /* radius on the image itself */
    border-radius: var(--br);

    transition: opacity 0.6s ease-in-out; /* or whatever you set in JS */
    will-change: opacity;
  }

  :global(.post-content .pt-carousel-img.is-visible) {
    opacity: 1;
  }

  /* horizontal: fill the box */
  :global(.post-content .pt-carousel-img.fit-cover) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* vertical: shrink-to-fit + center so radius affects the visible image */
  :global(.post-content .pt-carousel-img.fit-contain) {
    width: auto;
    height: 100%;
    max-width: 100%;
    object-fit: contain;

    /* center the narrower image */
    left: 50%;
    top: 50%;
    right: auto;
    bottom: auto;
    transform: translate(-50%, -50%);
  }

  :global(html.pt-no-scroll),
  :global(body.pt-no-scroll) {
    overflow: hidden;
  }

  :global(.pt-lightbox) {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: none;
    place-items: center;
  }

  :global(.pt-lightbox.is-open) {
    display: grid;
  }

  :global(.pt-lightbox__backdrop) {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  :global(.pt-lightbox__img) {
    position: relative;
    z-index: 1;
    border-radius: var(--br);
    max-width: 90vw;
    max-height: 90vh;
    width: auto;
    height: auto;
    object-fit: contain;
    cursor: zoom-out;
  }

  /* horizontal: prefer width */
  :global(.pt-lightbox__img.is-horizontal) {
    max-width: 90vw;
    max-height: 90vh;
  }

  /* vertical: prefer height (your “90% of height”) */
  :global(.pt-lightbox__img.is-vertical) {
    max-height: 90vh;
    max-width: 90vw;
  }

  :global(.post-content .pt-caption) {
    display: block;
    width: 100%;
    text-align: center;
    margin-top: 2px;
    font-size: calc(var(--fz) * 0.6);
    color: var(--footnote-gray);
  }

  :global(.post-content .pt-carousel-btn) {
    all: unset;
    position: absolute;
    z-index: 6;
    // padding: 8px 10px;
    line-height: 1;
    cursor: zoom-in;
  }

  :global(.post-content .pt-carousel-btn .material-symbols-outlined) {
    font-size: 30px;
    line-height: 1;
    color: var(--gray);
  }

  /* === MOBILE: INLINE FOOTNOTES AFTER TEXT === */
  @media (max-width: 768px) {
    :global(.post-content .footnote-layer--right),
    :global(.post-content .footnote-layer--left),
    :global(.post-content .margin-note) {
      display: none !important;
    }

    :global(.post-content .inline-footnote) {
      display: block;
      margin-top: calc(var(--lh) / 2);
      margin-bottom: calc(var(--lh) / 2);
      padding: 8px;
      color: var(--footnote-gray);
      border-radius: var(--br);
      margin-left: 5%;
    }
  }
</style>
