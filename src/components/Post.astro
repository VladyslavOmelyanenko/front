---
import PostContent from "../components/PostContent.jsx";

const { post } = Astro.props;

const postDate = new Date(post.postDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div>
  <div class="title-bar">
    <h2>{post.title}</h2>
    <p>{postDate}</p>
  </div>
  <div class="post-content">
    <PostContent post={post} client:load />
  </div>
</div>

<style lang="scss">
  @import "../styles/_variables.scss";

  .post-content {
    width: 100%;
    position: relative;
  }

  .title-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  :global(.post-content img) {
    width: 100%;
    margin: 8px 0;
    border-radius: 4px;
  }

  :global(.post-content p) {
    white-space: pre-wrap;
    min-height: 16px;
  }

  :global(.post-content strong) {
    font-weight: normal;
    font-size: 32px;
  }

  :global(.post-content blockquote) {
    font-weight: normal;
    width: 100%;
    text-align: center;
    border-radius: $br;
    background-color: $gray;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: $lh * 10;
    margin-top: $lh / 2;
    margin-bottom: $lh / 2;
    padding: 8px 8px;
  }

  /* === FOOTNOTE / MARGIN NOTE STYLES === */

  :global(.post-content .pt-block) {
    position: relative;
  }

  :global(.post-content .footnote-text) {
    color: $gray;
    text-decoration: underline;
  }

  :global(.post-content .footnote) {
    position: static;
  }

  /* inline note is hidden; JS uses its textContent */
  :global(.post-content .footnote-note) {
    display: none;
  }

  /* RIGHT margin layer */
  :global(.post-content .footnote-layer--right) {
    position: absolute;
    top: 0;
    left: 100%;
    margin-left: 16px;
    width: 20vw;
    pointer-events: none;
  }

  /* LEFT margin layer */
  :global(.post-content .footnote-layer--left) {
    position: absolute;
    top: 0;
    right: 100%;
    margin-right: 16px;
    width: 20vw;
    pointer-events: none;
    text-align: right;
  }

  :global(.post-content .margin-note) {
    position: absolute;
    // font-size: 0.8em;
    color: $gray;
    // border-left: 1px solid #ccc;
    padding-left: 8px;
    transform: translateY(0.15em);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease-out;
  }

  /* Make images inside notes behave */
  :global(.post-content .margin-note img) {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0.25rem 0;
  }

  :global(.post-content .margin-note--right) {
    left: 0;
    text-align: left;
  }

  :global(.post-content .margin-note--left) {
    right: 0;
    text-align: right;
    border-left: none;
    // border-right: 1px solid #ccc;
    padding-left: 0;
    padding-right: 8px;
  }

  /* visible state, toggled from JS */
  :global(.post-content .margin-note--visible) {
    opacity: 1;
  }
</style>
